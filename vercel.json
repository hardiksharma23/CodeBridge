{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "build",
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/v1/(.*)",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "env": {
      "MONGODB_URL": "@mongodb_url",
      "NODE_ENV": "production"
    }
  }